<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_primary"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="3500dp"
            android:layout_below="@id/team_name"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_header_custom3" />

        <TextView
            android:id="@+id/team_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/team_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/popmedium"
            android:text="@string/team_name"
            android:textColor="@color/white"
            android:textSize="30sp" />


        <ImageView
            android:id="@+id/team_logo"
            android:layout_width="110dp"
            android:layout_height="196dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/poster_nba" />

        <TextView
            android:id="@+id/tx_detail"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/team_name"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="25dp"
            android:fontFamily="@font/popmedium"
            android:text="@string/detail"
            android:textColor="@color/black"
            android:textSize="19sp" />
    </RelativeLayout>

</ScrollView>